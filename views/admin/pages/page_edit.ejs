<% layout('../layout') -%>

<div class="row">
	<%- partial('../partials/left')%>
	<div class="col m9 l10 form-create">
		<form method="POST">
			<div class="input-field col s12 m6">
				<input type="text" name="title" placeholder="Title" value="<%=data.title%>">
			</div>
			<div class="input-field col s12 m6">
				<input type="text" name="url" placeholder="URL" value="<%=data.url%>">
			</div>
			<div class="input-field col s12">
				<textarea name="description" placeholder="Description"><%=data.description%></textarea>
			</div>
			<div class="input-field col s12">
				<textarea name="text" placeholder="Body"><%=data.text%></textarea>
			</div>
			<div class="input-field col s12 right-align">
				<button type="submit" class="btn btn-orange">Save page</button>
				<a href="<%=data.id%>/del" class="btn red lighten-1">Delete</a>
			</div>	
		</form>
	</div>
</div>